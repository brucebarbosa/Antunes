<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingBottom="8dp"
                android:textSize="12sp"
                android:text="@string/data_entrada"/>

            <TextView
                android:id="@+id/tv_data_entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:paddingBottom="13dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="12sp"
                android:text="@string/data_orcamento_pronto"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/et_data_orcamento_pronto"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                mask:mask="##/##/##"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="12sp"
                android:text="@string/data_orcamento_aprovado"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/et_data_orcamento_aprovado"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                mask:mask="##/##/##"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="12sp"
                android:text="@string/data_servico_pronto"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/et_data_servico_pronto"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                mask:mask="##/##/##"
                android:textSize="20sp" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/endereco"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_tels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tels"
                android:inputType="phone"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_aparelho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/aparelho"
                android:inputType="textCapWords|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_defeito_reclamado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/defeito_reclamado"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_defeito_constatado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/defeito_constatado"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textColorHint="@color/colorAccent">

            <EditText
                android:id="@+id/et_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/obs"
                android:inputType="textCapSentences|textMultiLine"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="12sp"
                android:text="@string/preco"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/et_preco"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                mask:mask="R$ #####"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="12sp"
                android:text="@string/sinal"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/et_sinal"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                mask:mask="R$ #####"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/a_pagar"/>

                <TextView
                    android:id="@+id/tv_a_pagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_pago"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/pago"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bt_salvar"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/botao_customizado"
                android:padding="12dp"
                android:layout_marginEnd="2dp"
                android:text="@string/salvar"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bt_gerar_pdf"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/botao_customizado"
                android:padding="12dp"
                android:layout_marginStart="2dp"
                android:text="@string/gerar_pdf"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>